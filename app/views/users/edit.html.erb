
<h2>Update your information, <%=@user.username%></h2>

<%= form_for(@user, url: user_update_path, method: :put) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <%= f.label :pic_url%>
  <%= f.text_field :pic_url %>
  <%=  f.submit %>
<% end %>
