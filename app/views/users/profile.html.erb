<head>
  <script type="text/template", id='movieListtempplate'>
    <%% _.each(movies, function(movie) { %>
    <div class="row">
      <div class="col s6">
        <img id="film-poster" src="<%%= movie.get('Poster')%>" alt="No Poster Available" />
      </div>
      <div class="col s6">
        <h3><%%= movie.get('Title') %></h3>
            <%%= movie.get('Actors') %>
